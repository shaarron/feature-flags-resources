{
  "id": null,
  "uid": "flask-app-monitoring",
  "title": "Flask App Monitoring",
  "tags": ["flask", "api", "feature-flags"],
  "timezone": "browser",
  "schemaVersion": 36,
  "version": 1,
  "refresh": "30s",
  "time": { "from": "now-1h", "to": "now" },
  "panels": [
    {
      "title": "HTTP Request Rate",
      "type": "graph",
      "targets": [
        {
          "expr": "rate(flask_http_request_total[5m])",
          "legendFormat": "{{`{{method}} {{status}}`}}"
        }
      ],
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 }
    },
    {
      "title": "HTTP Error Rate (5xx)",
      "type": "graph",
      "targets": [
        {
          "expr": "rate(flask_http_request_total{status=~\"5..\"}[5m])",
          "legendFormat": "{{`{{method}} - {{status}}`}}"
        }
      ],
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 }
    },
    {
      "title": "Response Time (p95)",
      "type": "graph",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, rate(flask_http_request_duration_seconds_bucket[5m]))",
          "legendFormat": "{{`{{path}}`}}"
        }
      ],
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 }
    },
    {
      "title": "Pod CPU Usage",
      "type": "graph",
      "targets": [
        {
          "expr": "rate(container_cpu_usage_seconds_total{pod=~\"flask-app.*\"}[5m])",
          "legendFormat": "{{`{{pod}}`}}"
        }
      ],
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 }
    },
    {
      "title": "Pod Memory Usage",
      "type": "graph",
      "targets": [
        {
          "expr": "container_memory_usage_bytes{pod=~\"flask-app.*\"} / 1024 / 1024",
          "legendFormat": "{{`{{pod}} (MB)`}}"
        }
      ],
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 16 }
    }
  ]
}
